<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_item_poster"
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:layout_margin="10dp" />

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/tv_item_casts_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_item_poster"
        android:textColor="@color/black02"
        android:textSize="@dimen/common_size" />

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/tv_item_casts_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_casts_name"
        android:layout_toRightOf="@+id/iv_item_poster"
        android:textColor="#888888"
        android:textSize="@dimen/common_size" />


</RelativeLayout>